<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset("css/material-dashboard.css") }}" rel="stylesheet">
            <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
            <link rel="icon" type="image/png" href="{{ asset('favicon/favicon-32x32.png') }}" sizes="32x32" />
            <link rel="icon" type="image/png" href="{{ asset('favicon/favicon-16x16.png') }}" sizes="16x16" />
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
            <link href="{{ asset("css/dashboard.css") }}" rel="stylesheet">
        {% endblock %}
    </head>
    <body class="">
        <div class="sidebar" data-color="azure" data-background-color="white" data-image="../assets/img/sidebar-1.jpg">
            <div class="logo">
                <a href="{{ path("admin-dashboard") }}" class="simple-text logo-normal">
                    ECTRL<br/>
                    {{ company.name }}
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="nav-item {% block sideNavDashboard %}{% endblock %}">
                        <a class="nav-link" href="{{ path("admin-dashboard") }}">
                            <i class="material-icons">dashboard</i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li class="nav-item {% block sideNavUsers %}{% endblock %}">
                        <a class="nav-link" href="{{ path("admin-users") }}">
                            <i class="material-icons">person</i>
                            <p>Utilisateurs</p>
                        </a>
                    </li>
                    <li class="nav-item {% block sideNavAudits %}{% endblock %}">
                        <a class="nav-link" href="{{ path("admin-auditList") }}">
                            <i class="material-icons">content_paste</i>
                            <p>Audits</p>
                        </a>
                    </li>
                    <li class="nav-item {% block sideNavModels %}{% endblock %}">
                        <a class="nav-link" href="{{ path("admin-models-audits") }}">
                            <i class="material-icons">library_books</i>
                            <p>Mod√®les d'audits</p>
                        </a>
                    </li>
                    <li class="nav-item {% block sideNavNotifications %}{% endblock %}">
                        <a class="nav-link" href="{{ path("admin-notifications") }}">
                            <i class="material-icons">notifications</i>
                            <p>Notifications</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="main-panel">

            <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <a class="navbar-brand" href="#pablo">Dashboard</a>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end">
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link" href="#pablo" id="navbarDropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">logout</i>
                                    <p class="d-lg-none d-md-block">
                                        Compte
                                    </p>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownProfile">
                                    <a class="dropdown-item" href="#">Profil</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">Log out</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="content">
                <div class="container-fluid">
                    {% block content %}{% endblock %}
                </div>
            </div>
            <footer class="footer">
                <div class="container-fluid">
                    <nav class="float-left">
                        <ul>
                            <li>
                                <a href="#">
                                    Assistance EKALIT - ECTRL
                                </a>
                            </li>
                            <li>
                                <a href="https://creative-tim.com/presentation">
                                    A propos de EKALIT
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <div class="copyright float-right">
                        &copy;
                        <script>
                            document.write(new Date().getFullYear())
                        </script>, produit par
                        <a href="#" target="_blank">EKALIT</a> pour l'application mobile ECTRL.
                    </div>
                </div>
            </footer>
        </div>



    {% block javascripts %}
        <script scr="{{ asset("js/core/jquery.min.js") }}" type="text/javascript"></script>
        <script scr="{{ asset("js/core/popper.min.js") }}" type="text/javascript"></script>
        <script scr="{{ asset("js/core/bootstrap-material-design.min.js") }}" type="text/javascript"></script>
        <script scr="{{ asset("js/plugins/perfect-scrollbar.jquery.min.js") }}" type="text/javascript"></script>
        <script scr="{{ asset("js/plugins/chartist.min.js") }}" type="text/javascript"></script>
        <script scr="{{ asset("js/js/material-dashboard.min.js") }}" type="text/javascript"></script>
    {% endblock %}
</body>
</html>
